    <!--=== Profile ===-->
    <div class="container content profile">
        <div class="row">
            <!--Left Sidebar-->
            <div class="col-md-3 md-margin-bottom-40">
                <img class="img-responsive profile-img margin-bottom-20" src="/IMG/manageProfile.png" alt="">

                <ul class="list-group sidebar-nav-v1 margin-bottom-40" id="sidebar-nav-1">
                    <li class="list-group-item active">
                        <a href="manageProfile"><i class="fa fa-cog"></i> Manage Account</a>
                    </li>
                    <li class="list-group-item">
                        <a href="../users"><i class="fa fa-history"></i> Upcoming Activities</a>
                    </li>
                    <li class="list-group-item">
                        <a href="activityPosted"><i class="fa fa-bar-chart-o"></i> Posted Activities</a>
                    </li>
                    <li class="list-group-item">
                        <a href="contactList"><i class="fa fa-group"></i> Contacts</a>
                    </li>
                </ul>



                <hr>



                <div class="margin-bottom-50"></div>

                <!--Datepicker-->
                <form action="#" id="sky-form2" class="sky-form">
                    <div id="inline-start"></div>
                </form>
                <!--End Datepicker-->
            </div>
            <!--End Left Sidebar-->

            <!-- Profile Content -->
            <div class="col-md-9" ng-controller="manage_profile_controller">
                <div class="profile-body margin-bottom-20">
                    <div class="tab-v1">
                        <ul class="nav nav-justified nav-tabs">
                            <li><a data-toggle="tab" href="#passwordTab">Edit Account Information</a></li>
                            <li><a data-toggle="tab" href="#payment">Edit Password</a></li>
                        </ul>
                        <div class="tab-content" >
                            <div id="passwordTab" class="profile-edit tab-pane fade">
                                <h2 class="heading-md">Edit Your Profile Information</h2>
                                <br>
                                <form class="sky-form" id="sky-form4" enctype="multipart/form-data" ng-submit="manage()">
                                    <dl class="dl-horizontal">
                                        <dt>Username</dt>
                                        <dd>
                                            <section>
                                                <label class="input">
                                                    <i class="icon-append fa fa-user"></i>
                                                    <input ng-model="user.USERNAME" type="text"  name="username">
                                                    <b class="tooltip tooltip-bottom-right">Please enter your new username</b>
                                                </label>
                                            </section>
                                        </dd>
                                        <dt>Phone number</dt>
                                        <dd>
                                            <section>
                                                <label class="input">
                                                    <i class="icon-append fa fa-mobile-phone"></i>
                                                    <input ng-model="user.PHONE_NO" type="text"  id="mobile" name=phone_no>
                                                    <b class="tooltip tooltip-bottom-right">Please enter your new phone number</b>
                                                </label>
                                            </section>
                                        </dd>
                                        <dt>Description</dt>
                                        <dd>
                                            <section>
                                                <label class="input">
                                                <input ng-model="user.DESCRIPTION" type="text"  name="description" id="selfIntro">
                                                </label>
                                            </section>
                                        </dd>

                                    </dl>
                                    <br>
                                    <button type="button" class="btn-u btn-u-default" id="cancelAccountInfo">Cancel</button>
                                    <button class="btn-u save" type="submit" >Save Changes</button>
                                </form>
                            </div>

                            <div id="payment" class="profile-edit tab-pane fade">
                                <h2 class="heading-md">Edit your password</h2>
                                <form class="sky-form" id="sky-form" enctype="multipart/form-data" ng-submit="password()">
                                    <!--Checkout-Form-->
                                        <dd>
                                            <section>
                                                <label class="input">
                                                    <i class="icon-append fa fa-lock"></i>
                                                    <input type="password" id="password" name="pwd" placeholder="New Password" ng-model="user.pwd">
                                                    <b class="tooltip tooltip-bottom-right">Please enter your new password</b>
                                                </label>
                                            </section>
                                        </dd>
                                        <dd>
                                            <section>
                                                <label class="input">
                                                    <i class="icon-append fa fa-lock"></i>
                                                    <input type="password" name="pwd_confirm" placeholder="Confirm Password" ng-model="user.pwd_confirm">
                                                    <b class="tooltip tooltip-bottom-right">Don't forget your password</b>
                                                </label>
                                            </section>
                                        </dd>
                                    <button type="button" class="btn-u btn-u-default" id="cancelSelfIntro">Cancel</button>
                                    <button class="btn-u save" type="submit">Save Changes</button>
                                    <!--End Checkout-Form-->
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Profile Content -->
        </div><!--/end row-->
    </div>
