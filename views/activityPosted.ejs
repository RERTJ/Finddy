    });
</script>
<script>
    var app=angular.module('Finddyapp',[]);
    app.controller('posted_activities_controller',function($scope, $http)
    {
        $scope.activities = <%- activities %>;
        $http({
            url: '/users/api/getUpdates',
            type: 'GET'
          }).then(function(result) {
            console.log(result);
            $scope.updates = result.data;
          });
    });
</script>





